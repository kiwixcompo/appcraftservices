{
    "name": "appcraft/website-refactoring",
    "description": "App Craft Services Website Refactoring",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "fakerphp/faker": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "AppCraft\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppCraft\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}