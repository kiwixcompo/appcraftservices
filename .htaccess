# Clean URLs for appcraftservices.com
RewriteEngine On

# Prevent directory browsing
Options -Indexes

# Hidden admin access route (secret URL)
RewriteRule ^secret-admin-access-2026/?$ admin/login.php [L]

# Force Chrome cache bypass
RewriteCond %{QUERY_STRING} ^force-reload=1$ [NC]
RewriteRule ^(.*)$ /force-reload.php [L]

# Cache busting for development - Add timestamp to static files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|svg)$
RewriteRule ^(.+)\.(css|js|png|jpg|jpeg|gif|ico|svg)$ $1.$2 [L]

# Detect environment and handle routing accordingly
# For localhost - ensure /appcraftservices/ prefix is maintained
RewriteCond %{HTTP_HOST} ^localhost [OR]
RewriteCond %{HTTP_HOST} ^127\.0\.0\.1 [OR]
RewriteCond %{HTTP_HOST} ^192\.168\.
RewriteCond %{REQUEST_URI} !^/appcraftservices/
RewriteRule ^(.*)$ /appcraftservices/$1 [R=301,L]

# Handle directory-based URLs (e.g., /process -> /process/index.html)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/assets/
RewriteCond %{REQUEST_URI} !^/appcraftservices/assets/
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/appcraftservices/api/
RewriteCond %{REQUEST_URI} !^/admin/
RewriteCond %{REQUEST_URI} !^/appcraftservices/admin/
RewriteCond %{REQUEST_URI} !^/data/
RewriteCond %{REQUEST_URI} !^/appcraftservices/data/
RewriteRule ^([^/]+)/?$ $1/index.html [L]

# Security headers - Simple and Chrome-friendly
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options SAMEORIGIN
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Remove server signature
Header unset Server
Header always unset X-Powered-By

# AGGRESSIVE CACHE BUSTING - Disable all caching for development
<IfModule mod_headers.c>
    # Disable caching for HTML, PHP, and API files
    <FilesMatch "\.(html|htm|php|json)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0, s-maxage=0"
        Header set Pragma "no-cache"
        Header set Expires "Thu, 01 Jan 1970 00:00:00 GMT"
        Header unset ETag
        Header unset Last-Modified
        Header set X-Cache-Control "no-cache"
    </FilesMatch>
    
    # Minimal caching for CSS and JS (1 minute for development)
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "no-cache, must-revalidate, max-age=60"
        Header set Pragma "no-cache"
        Header append Vary "Accept-Encoding"
    </FilesMatch>
    
    # Short cache for images (5 minutes for development)
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp)$">
        Header set Cache-Control "public, max-age=300"
        Header append Vary "Accept-Encoding"
    </FilesMatch>
</IfModule>

# Expires headers for additional cache control
<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML and PHP - immediate expiry
    ExpiresByType text/html "now"
    ExpiresByType application/x-httpd-php "now"
    ExpiresByType application/json "now"
    
    # CSS and JavaScript - 1 minute
    ExpiresByType text/css "access plus 1 minute"
    ExpiresByType text/javascript "access plus 1 minute"
    ExpiresByType application/javascript "access plus 1 minute"
    ExpiresByType application/x-javascript "access plus 1 minute"
    
    # Images - 5 minutes
    ExpiresByType image/jpg "access plus 5 minutes"
    ExpiresByType image/jpeg "access plus 5 minutes"
    ExpiresByType image/gif "access plus 5 minutes"
    ExpiresByType image/png "access plus 5 minutes"
    ExpiresByType image/webp "access plus 5 minutes"
    ExpiresByType image/svg+xml "access plus 5 minutes"
    ExpiresByType image/x-icon "access plus 5 minutes"
</IfModule>

# Force revalidation
<IfModule mod_headers.c>
    Header append Vary Accept-Encoding
    Header set X-UA-Compatible "IE=edge"
    
    # Add timestamp header for debugging
    Header set X-Timestamp "%D %t"
    
    # Prevent proxy caching
    Header set Cache-Control "private, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
</IfModule>